{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "baseUrl": "./src",
        "outDir": "./dist",
        "allowJs": true,
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types",
            "@types",
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "../node_modules"
    ]
}